generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  WORKER
}

enum Position {
  FILTER
  MECHANIC
  HEAD_MECHANIC
}

enum StatusLift {
  IN_SERVICE
  WAITING
  COMPLETE
}

enum StatusProject {
  COMPLETE
  STOPPED
  ONGOING
}

model User {
  id_user      Int      @id @default(autoincrement())
  username     String   @unique
  password     String
  position     Position
  name         String
  role         Role
  phone_number String?
  id_team      Int
}

model Lifts {
  id_lift    Int        @id @default(autoincrement())
  name_lift  String     @unique
  status     StatusLift
  end_date   DateTime
  id_project Int
}

model Projects {
  id_project   Int           @id @default(autoincrement())
  name_project String        @unique
  status       StatusProject
  start_date   DateTime
  end_date     DateTime
  description  String?
  id_lift      Int
  id_team      Int
}
