generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  WORKER
}

enum Position {
  FILTER
  MECHANIC
  HEAD_MECHANIC
}

model User {
  id_user      Int     @id @default(autoincrement())
  username     String  @unique
  password     String
  position     String
  name         String
  role         Role
  phone_number String?
  id_team      Int?
}
